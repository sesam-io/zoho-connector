{
    "_id": "{{@ system @}}",
    "oauth2": {
        "client_id": "$SECRET(client-id)",
        "client_secret": "$SECRET(client-secret)",
        "scope": [
            "ZohoCRM.modules.ALL"
        ],
        "token_url": "https://accounts.zoho.eu/oauth/v2/token"
    },
    "operations": {
        "get": {
            "method": "GET",
            "url": "{{ properties.module }}"
        }
    },
    "type": "system:rest",
    "url_pattern": "https://www.zohoapis.com/crm/v3/%s",
    "verify_ssl": true
}